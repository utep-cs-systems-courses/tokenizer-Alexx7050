# for convenience, define variable $(OBJS) to list of object files
OBJS= history.o tokenizer.o uimain.o 

# compiler flags. -g for debug, -O3 for optimization
CFLAGS=-g -O3

# first target is built by default
all: tokenize 

# tokenize (target) depends on all object files (prerequisites)
tokenize: $(OBJS) 
	cc -o tokenize $(CFLAGS) $(OBJS)

# all object files built from c files that include
$(OBJS): tokenizer.h history.h

# deletes files generated by compilation
clean:
	rm -f *.o tokenize

run:tokenize
	./tokenize
